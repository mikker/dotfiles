# nb()
# Checkout new (or existing) branch of name ...

nb() {
  if [[ $# > 0 ]]; then
    if [[ $(git branch | tr -d '* ' | grep "$1") != "" ]]; then
      git checkout $1
    else
      git checkout master && git checkout -b $1
    fi
  else
    git branch | tr -d '* '
  fi
}

_nb() { reply=($(git branch | tr -d '* ' | xargs echo)) }
compctl -K _nb nb

