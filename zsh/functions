# p()
# Quickly navigate to a project - with autocorrect
p() { cd ~/Projects/$1; }
_p() { _files -W ~/Projects -/; }
compdef _p p

# o()
# Open a file or the current directory
o() {
  if [ $1 ]; then
    open $1
  else
    open .
  fi
}

pow() {
  if [ $1 ]; then
    ln -sf "`pwd`" ~/.pow/$1
  else
    ln -sf "`pwd`" ~/.pow
  fi
}

