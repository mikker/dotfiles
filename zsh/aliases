# General
alias v='mvim'
alias so='source'
alias mkdir='mkdir -p'
alias l='ls'
alias ll='ls -l'
alias la='ls -a'

# Screen
alias s="screen -R"

# Git
alias st='git status'
alias ga='git add --all'
alias gci='git commit -m'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias gd='git diff'
alias gl='git tree'
alias gla='git tree --all'
alias gpu='git push -u'
alias gdt='git difftool'
alias gmt='git mergetool'
alias gco='git checkout'
alias gb='hub browse'
alias gpr='hub pull-request'
alias ms='git checkout master'
alias up='git checkout master && git pull && git checkout -'

# Rack
alias re='touch tmp/restart.txt'
# Bundler
alias be='bundle exec'
# Rails 3+
alias rg='bundle exec rails generate'
alias rc='bundle exec rails console'
alias rs='bundle exec rails server'
alias rd='bundle exec rails destroy'
# Rails
alias migrate='bundle exec rake db:migrate db:test:prepare'
alias remigrate='bundle rake db:migrate:redo rake db:test:prepare'
alias tl='tail -f log/development.log'
# Gems
alias mm='bundle exec middleman'
# Irb
alias irb='irb --readline'
alias fs='bundle exec foreman start'
