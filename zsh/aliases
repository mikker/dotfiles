# General
alias ls="ls -Gh"
alias ssp="hack && rake && ship"

# Git
alias st='git st'
alias ci='git ci -m'
alias add='git add'
alias gx='gitx'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"

# Passenger
alias re='touch tmp/restart.txt'

# Rails
alias sc='script/console'
alias ss='script/server'
alias sg='script/generate'
alias sd='script/destroy'
alias sp='script/plugin'
alias scdb='script/dbconsole'
alias migrate='rake db:migrate; rake db:test:clone'
alias remigrate='rake db:migrate:redo'
alias tl='tail -f log/development.log'

# Webby
alias wa='webby autobuild'
alias wT='webby -T'

# Shotgun
alias sgun='shotgun config.ru'

# Autotest
alias at='autotest'
alias as='autospec'

# Rake
alias rT='rake -T'

# Irb
alias irb='irb --readline -r irb/completion -rubygems'