#!/bin/sh -x
CURRENT=`git branch | grep '\*' | awk '{print $2}'`
if [[ $CURRENT != "develop" && $CURRENT != "master" ]]; then
  if [ `git branch | grep develop` ]; then
    TARGET="develop"
  else
    TARGET="master"
  fi
  git rebase -i $TARGET
  exit
fi

if [[ $CURRENT == "develop" ]]; then
  git rebase -i master
  exit
fi

if [[ $CURRENT == "master" ]]; then
  git rebase -i origin/master
  exit
fi
