#!/usr/bin/env ruby

# Start/stop postgresql
# usage: pgd start|stop

base = "pg_ctl -D #{ENV['BREW_PATH']}/var/postgres"

case ARGV.shift
when "start"
  system "#{base} -l #{ENV['BREW_PATH']}/var/postgres/server.log start"
when "stop"
  system "#{base} stop -s -m fast"
else
  puts "Must pass in command.  (ex) pgd start|stop"
  exit 1
end
