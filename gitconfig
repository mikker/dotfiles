[user]
	name = Mikkel Malmberg
	email = mikkel@brnbw.com
[color]
  diff = auto
  status = auto
  branch = auto
[github]
  user = mikker
  token = !security find-generic-password -gs github.token -w | tr -d '\n'
  password = !security find-generic-password -gs github.password -w | tr -d '\n'
[alias]
  br = branch
  st = status
  ci = commit
  co = checkout
  rb = rebase
  tree = "log --graph --decorate --abbrev=commit"
  pr = "!hub pull-request"
  empty-msg = commit --allow-empty-message --message=
  save = "!f() { git add -A && git commit -m \"$@\"; }; f"
  wip = !git add -u && git commit -m "WIP"
  amend = commit -a --amend
  wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
  bclean = "!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | xargs -r git branch -d; }; f"
  bdone = "!f() { git checkout ${1-master} && git up && git bclean ${1-master}; }; f"
  undo = "!f() { git reset --hard $(git rev-parse --abbrev-ref HEAD)@{${1-1}}; }; f"
[core]
  excludesfile = ~/.gitignore
  editor = vim
[format]
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[push]
  default = current
[difftool]
  prompt = false
[merge]
  tool = vimdiff
  conflictstyle = diff3
[mergetool]
  prompt = false
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true

; vim: set ft=gitconfig
